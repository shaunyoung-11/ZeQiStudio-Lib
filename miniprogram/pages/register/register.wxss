.container{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.container .title{
  font-size: 30px;
  font-weight: 700;
}

.container .subTitle{
  align-self: flex-end;
  margin-top: -50px;
  font-size: 18px;
  font-weight: 300;
}

.container .search{
  position: relative;
}

.container .search .search-text{
  padding: 8px 23px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.5);
}

.container .search .search-logo{
  position: absolute;
  left: 0;
  top: 8px;
  width: 5px;
  height: 5px;
}

.container .search-btn{
  background-color: rgba(0, 178, 106, 0.8);
}

.container .right{
  font-size: 12px;
  color: #aaa;
}