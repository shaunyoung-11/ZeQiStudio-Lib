.book{
  width: 100%;
  height: 150px;
  display: flex;
  align-items: center;
  justify-content: start;
  box-shadow: 0 10px 18px rgba(0, 0, 0, 0.2);
  border-radius: 25px;
  padding: 10px 5px;
  margin-top: 18px;
}

.book-cover{
  height: 100%;
  object-fit: cover;
}

.book-info{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  padding-left: 10px;
}

.book-info .name{
  font-weight: 700;
}

.book-info .press{
  font-size: 0.8rem;
  color: #aaa;
}

.state-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
}

.state-info .position{
  font-size: 0.9rem;
  font-weight: 500;
  color: rgba(0, 106, 178, 0.8);
}

.book-state{
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  font-size: 0.75rem;
  color: #fff;
  box-sizing: border-box;
}

.book-state-y{
  background-color: green;
}

.book-state-n{
  background-color: red;
}

.history{
  width: 100%;
  margin-top: 18px;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: stretch;
  border-radius: 25px;
  box-shadow: 0 10px 18px rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.history-item{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100px;
  border-bottom: solid 1px #ccc;
}

.avatar{
  height: 50px;
  width: 50px;
  border-radius: 100%;
}

.usr-info{
  height: 100%;
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.nickname{
  font-size: 1.3rem;
  font-weight: 700;
}

.time{
  font-size: 0.8;
  color: #aaa;
}

.borrow{
  margin-top: 25px;
  background-color: rgba(0, 178, 106, 0.8);
}